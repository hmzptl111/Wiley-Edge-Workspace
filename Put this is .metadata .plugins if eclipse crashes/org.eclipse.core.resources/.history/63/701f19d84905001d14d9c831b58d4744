package com.word;

public class WordsInString {
	private String[] words;
 
	public WordsInString(String string) {
		System.out.println(string);
		words = string.split("[\\s+\\,\\.]+");
		for(String word: words) {
			System.out.println(word);
		}
	}
	
	public String[] getWords() {
		return words;
	}
}
